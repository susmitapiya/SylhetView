<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hotel1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context="com.example.user.myapplication.Hotel1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/mmc"
            android:scaleType="fitXY"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Richmond Hotel and Apartments"
            android:gravity="center"
            android:textColor="#FAFAFA"
            android:background="#536DFE"
            android:textSize="20dp"
            style="@style/AlertDialog.AppCompat.Light"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="10th Floor, Al Hamra Shopping City, Hazrat Shahjalal Road, Zindabazar, Sylhet-3100, Bangladesh."
            android:textSize="20dp"
            android:id="@+id/add"
            android:gravity="center"
            android:textColor="#FAFAFA"
            android:background="#536DFE"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:background="#536DFE"
        android:orientation="horizontal">

        <TextView
            android:padding="5dp"
            android:id="@+id/phnnum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Contact No: +880 1729-304801"
            android:textSize="18dp"
            android:textColor="#FAFAFA"
            android:gravity="center"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:orientation="horizontal"
        android:background="#3F51B5"
        android:weightSum="2"
        android:layout_marginTop="2dp"
        >

        <ImageView
            android:id="@+id/web"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/website"
            />



        <ImageView
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/phone"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="vertical"
        android:padding="3dp">

        <fragment
            android:id="@+id/googleMap"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>


</LinearLayout>
